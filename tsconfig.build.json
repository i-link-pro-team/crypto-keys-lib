{
    "compilerOptions": {
        "module": "es6",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist", "test.ts"]
}
